{
  "name": "PCBflow",
  "version": "0.1.0",
  "private": true,
  "devDependencies": {
    "@babel/plugin-proposal-object-rest-spread": "^7.0.0",
    "assert": "^1.4.1",
    "chai": "^3.5.0",
    "chai-http": "^3.0.0",
    "concurrently": "^3.4.0",
    "eslint": "^3.19.0",
    "eslint-config-airbnb": "^14.1.0",
    "eslint-import-resolver-webpack": "^0.8.1",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^4.0.0",
    "eslint-plugin-react": "^6.10.3",
    "faker": "^4.1.0",
    "mocha": "^3.3.0",
    "react-scripts": "0.8.5"
  },
  "dependencies": {
    "babel-preset-env": "^1.7.0",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.17.1",
    "dotenv": "^4.0.0",
    "express": "^4.15.2",
    "jsonwebtoken": "^8.1.1",
    "jwt-decode": "^2.2.0",
    "lodash": "^4.17.11",
    "monet": "^0.8.10",
    "mongodb": "^2.2.24",
    "mongoose": "^4.8.6",
    "passport": "^0.4.0",
    "passport-jwt": "^3.0.1",
    "passport-local": "^1.0.0",
    "shortid": "^2.2.8"
  },
  "scripts": {
    "start": "concurrently \"node server.js\"  \"cd client && npm start\"",
    "server": "NODE_ENV='production' node server.js",
    "test": "mocha",
    "lint": "eslint --ext .js --ext .jsx client/src/ || exit 0",
    "lint:fix": "eslint --fix --ext .js --ext .jsx client/src/ || exit 0",
    "build:client": "cd client && npm run build",
    "push:git": "git add . && git commit -m \"Updates build for deployment\" && git push origin master || exit 0",
    "push:heroku": "git push heroku master",
    "deploy": "npm run build:client && npm run push:git && npm run push:heroku"
  }
}
